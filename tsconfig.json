{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "src/prisma.config.tsg.tsg.ts"],
  "exclude": ["node_modules", "dist"]
}